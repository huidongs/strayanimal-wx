<!--pages/profile/profile.wxml-->
<view class='contain'>
  <view class='header'>
    <view class='header-tx'>
      <open-data type="userAvatarUrl" wx:if="{{ !hasUserInfo}}"></open-data>
      <view class='unLogin-tx' wx:else>
        <text class='tx-icon daoke-icon icon-denglu'></text>
      </view>
    </view>
    <view class='header-info'>
      <view class='info-login font-large' bindtap='toLogin' wx:if="{{!hasUserInfo && canIUse}}">登录</view>
      <view class='info-login' wx:else>
        <open-data type="userNickName" class="userNickName"></open-data>
      </view>
    </view>
  </view>
  <view class='menus font-middle'>
    <view class='menus-top'>
      <view class='menus-item' hover-class='btn-click-242' catchtap='onFindAniaml'>
        <text class='item-icon daoke-icon icon-youhuiquan'></text>
        <text class='item-title'>搜索动物位置</text>
        <text class='arrow daoke-icon icon-zhixiang'></text>
        <text class='couponCount' wx:if="{{isLogin}}">0张</text>
      </view>
    </view>
    <view class='menus-middle'>
      <view class='menus-item' hover-class='btn-click-242' catchtap='onAddAnimal'>
        <text class='item-icon daoke-icon icon-yijianfankui'></text>
        <text class='item-title'>添加Aniaml</text>
        <text class='arrow daoke-icon icon-zhixiang'></text>
      </view> 
      <view class='menus-item' hover-class='btn-click-242' catchtap='onUerOrder'>
        <text class='item-icon daoke-icon icon-yijianfankui'></text>
        <text class='item-title'>查询用户Order</text>
        <text class='arrow daoke-icon icon-zhixiang'></text>
      </view>
      <view class='menus-item' hover-class='btn-click-242' catchtap='onContact'>
        <text class='item-icon daoke-icon icon-icon-test'></text>
        <text class='item-title'>......</text>
        <text class='arrow daoke-icon icon-zhixiang'></text>
      </view>
    </view>
    <view class='menus-bottom'>
      <view class='menus-item' hover-class='btn-click-242' catchtap='toReceiveCoupon'>
        <text class='item-icon daoke-icon icon-zhuanfa'></text>
        <text class='item-title'>......</text>
        <text class='arrow daoke-icon icon-zhixiang'></text>
      </view>
    </view>

  </view>
</view>